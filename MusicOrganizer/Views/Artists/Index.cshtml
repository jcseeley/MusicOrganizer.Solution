@{
  Layout = "_Layout";
}


@using MusicOrganizer.Models;

<h1>Artist List</h1>
@if (Model.Count == 0)
{
  <p>There are no records in your collection.</p>
}
<ul>
  @foreach (Artist artist in Model)
  {
    <li><a href='/records/@artist.Id'>@artist.Name</a></li>
  }
</ul>

<a href="/artists/new">Add An Artist</a><br>
<a href="/">Back to Home</a>

<form action="/artists/delete" method="post">
  <button type="submit" name="button">Remove All Artists</button>
</form>